{{- $pkgName := "" -}}
{{- if (.os.windows) -}}
{{-   $pkgName = get .pkg "winget" -}}
{{- else if (.os.alpine) -}}
{{-   $pkgName = coalesce (get .pkg "alpine") (get .pkg "linux") (get .pkg "unix") -}}
{{- else if (.os.chimera) -}}
{{-   $pkgName = coalesce (get .pkg "chimera") (get .pkg "linux") (get .pkg "unix") -}}
{{- else if (.os.darwin) -}}
{{-   $pkgName = coalesce (get .pkg "brew") (get .pkg "unix") -}}
{{- end -}}
{{- if $pkgName -}}
{{-   template "pkgName" $pkgName -}}
{{- end -}}
