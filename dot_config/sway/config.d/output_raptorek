# vi:ft=swayconfig

output * mode  3840x2160@60Hz
output * scale 1.75

set $output_left  DP-1
set $output_right HDMI-A-1

# position has to be scaled
output $output_left  position 0    0
output $output_right position 2194 0

workspace 1 output $output_left
workspace 2 output $output_right
workspace 3 output $output_left
workspace 4 output $output_right
workspace 5 output $output_left
workspace 6 output $output_right
workspace 7 output $output_left
workspace 8 output $output_right
workspace 9 output $output_left
workspace 0 output $output_right
